# The guess API is already defined for you.
# @param num, your guess
# @return -1 if num is higher than the picked number
#          1 if num is lower than the picked number
#          otherwise return 0
# def guess(num):

class Solution(object):
    def guessNumber(self, n):
        l,r=1,n
        m=0
        while True:
            m=(l+r)//2
            if guess(m)==0:
                return m
            elif guess(m)==-1:
                
                r=m-1
            elif guess(m)==1:
                
                l=m+1
            


        """
        :type n: int
        :rtype: int
#althernate
# The guess API is already defined for you.
# @param num, your guess
# @return -1 if num is higher than the picked number
#          1 if num is lower than the picked number
#          otherwise return 0
# def guess(num):

class Solution(object):
    def guessNumber(self, n):
        lf=1
        rt=n
        while lf<=rt:
            mid=(lf+rt)//2
            if guess(mid)<0:
                rt=mid-1
            elif guess(mid)>0:
                lf=mid+1
            else:
                return mid
        """
        :type n: int
        :rtype: int
        """





























































        
        """
